#include<bits/stdc++.h>
using namespace std;

int main()
{
    int n;
    cin>>n;

    int i=0;
    do
    {
        if(i%2==0)
        {

            cout<<"I hate ";
            if(i==n-1)
            {
                cout<<"it";
            }
            else
            {
                cout<<"that ";
            }
        }
        else
        {
            cout<<"I love ";

            if(i==n-1)
            {
                cout<<"it";
            }
            else
            {
                cout<<"that ";
            }
        }
        i++;
    }while(i<n);
    return 0;
}
